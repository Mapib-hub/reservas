<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('parsiales/head')%>
</head>
<body>
    <%- include('parsiales/navigate')%>
    <div class="container">
       <div>
        <h1 class="float_left">Noticias</h1>
        <button type="button" class="btn btn-primary float_right" data-toggle="modal" data-target="#exampleModal">
            Subir Noticia
          </button>
       </div> 
       <%- include('parsiales/tabla_noti')%>
    </div>

    <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nueva Noticia</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form  method="post" action="/noticia" class="form" enctype="multipart/form-data" >
                <p>Titulo</p>
                <input type="text" class="form-control" name="titulo" placeholder="Ingrese Titulo">
                <br><p>Descripcion</p> 
                <textarea name="descripcion" class="form-control"></textarea>
                <br>
                <p>Imagen</p>
                <input type="file" name="foto_noti">
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" data-dismiss="modal">Enviar</button>  
        </form>
        </div>
      </div>
    </div>
  </div>
  <script>$('#myModal').on('shown.bs.modal', function () {
    $('#myInput').trigger('focus')
  })</script>
  <%- include('parsiales/footer')%> 
</body>
</html>
